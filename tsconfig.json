{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"types": ["node", "unist", "unified"],
		"allowJs": true,
		"noImplicitAny": true,
		"baseUrl": ".",
		"paths": {},
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"declaration": true,
		"outDir": "./dist"
	},

	"include": ["./src/index.ts"]
}
