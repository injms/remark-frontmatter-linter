{
	"compilerOptions": {
		"allowJs": false,
		"allowSyntheticDefaultImports": false,
		"baseUrl": ".",
		"declaration": true,
		"isolatedModules": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"outDir": "./dist",
		"paths": {},
		"rootDir": "./src",
		"sourceMap": false,
		"strict": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"target": "esnext",
		"types": ["node", "unist", "unified"]
	},

	"include": ["./src/index.ts"]
}
