{
  "name": "remark-frontmatter-linter",
  "version": "0.8.5",
  "description": "A linter for YAML frontmatter",
  "type": "module",
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "scripts": {
    "test": "ava",
    "lint": "eslint"
  },
  "keywords": [
    "remark",
    "yaml",
    "frontmatter"
  ],
  "author": "Ian James",
  "license": "SEE LICENSE IN license.md",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/injms/remark-frontmatter-linter.git"
  },
  "bugs": {
    "url": "https://github.com/injms/remark-frontmatter-linter/issues"
  },
  "homepage": "https://github.com/injms/remark-frontmatter-linter#readme",
  "devDependencies": {
    "@ava/typescript": "^4.0.0",
    "@types/eslint": "^8.40.2",
    "ava": "^5.3.0",
    "eslint": "^8.42.0",
    "eslint-plugin-ava": "^14.0.0",
    "tsx": "^3.12.7",
    "typescript": "^5.1.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "nodeArguments": [
      "--loader=tsx"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "ava"
    ],
    "rules": {
      "ava/assertion-arguments": "error",
      "ava/test-title-format": [
        "error",
        {
          "format": "^that"
        }
      ]
    }
  }
}
