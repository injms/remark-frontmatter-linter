{
  "name": "@injms/remark-frontmatter-linter",
  "version": "0.8.9",
  "description": "A linter for YAML frontmatter",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "clean": "rm -r dist",
    "lint": "eslint",
    "release:github": "npm publish --scope=@injms --registry=https://npm.pkg.github.com",
    "release:npm": "np --message='ðŸš¦ Version %s'",
    "test": "NODE_OPTIONS='--import=tsx' c8 ava",
    "type-check": "tsc --noEmit",
    "watch": "rollup --config rollup.config.js --watch --watch.onBundleStart='npm run clean'"
  },
  "keywords": [
    "frontmatter",
    "linter",
    "markdown",
    "remark",
    "yaml"
  ],
  "author": "Ian James",
  "license": "SEE LICENSE IN license.md",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/injms/remark-frontmatter-linter.git"
  },
  "bugs": {
    "url": "https://github.com/injms/remark-frontmatter-linter/issues"
  },
  "homepage": "https://github.com/injms/remark-frontmatter-linter#readme",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/eslint": "^8.56.5",
    "@types/mdast": "^4.0.3",
    "@types/node": "^20.11.28",
    "@types/unist": "^3.0.2",
    "ava": "^6.1.2",
    "c8": "^9.1.0",
    "eslint-plugin-ava": "^14.0.0",
    "np": "^10.0.2",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "remark-lint": "^9.1.2",
    "rollup": "^4.13.2",
    "to-vfile": "^8.0.0",
    "tslib": "^2.6.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "unified-lint-rule": "^2.1.2",
    "vfile-reporter": "^8.1.0"
  },
  "dependencies": {
    "eslint": "^8.57.0",
    "eslint-plugin-yml": "^1.12.2",
    "unist-util-is": "^6.0.0"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "nodeArguments": [
      "--loader=tsx"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "ava"
    ],
    "rules": {
      "ava/assertion-arguments": "error",
      "ava/test-title-format": [
        "error",
        {
          "format": "^that"
        }
      ]
    }
  }
}
