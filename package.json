{
  "name": "remark-frontmatter-linter",
  "version": "0.8.5",
  "description": "A linter for YAML frontmatter",
  "type": "module",
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "clean": "rm -r dist",
    "lint": "eslint",
    "test": "ava",
    "watch": "rollup --config rollup.config.js --watch --watch.onBundleStart='npm run clean'"
  },
  "keywords": [
    "frontmatter",
    "linter",
    "markdown",
    "remark",
    "yaml"
  ],
  "author": "Ian James",
  "license": "SEE LICENSE IN license.md",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/injms/remark-frontmatter-linter.git"
  },
  "bugs": {
    "url": "https://github.com/injms/remark-frontmatter-linter/issues"
  },
  "homepage": "https://github.com/injms/remark-frontmatter-linter#readme",
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@rollup/plugin-typescript": "^11.1.3",
    "@types/eslint": "^8.44.8",
    "@types/mdast": "^4.0.3",
    "@types/node": "^20.10.0",
    "@types/unist": "^3.0.2",
    "ava": "^5.3.1",
    "eslint": "^8.54.0",
    "eslint-plugin-ava": "^14.0.0",
    "rollup": "^4.6.0",
    "tslib": "^2.6.0",
    "tsx": "^3.12.7",
    "typescript": "^5.2.2",
    "unified-lint-rule": "^2.1.2"
  },
  "dependencies": {
    "eslint-plugin-yml": "^1.8.0",
    "unist-util-is": "^5.2.1"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "nodeArguments": [
      "--loader=tsx"
    ]
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "ava"
    ],
    "rules": {
      "ava/assertion-arguments": "error",
      "ava/test-title-format": [
        "error",
        {
          "format": "^that"
        }
      ]
    }
  }
}
